@using Microsoft.AspNetCore.Components.Authorization
@using SubastaMaestra.WebSite.Services
@using SubastaMaestra.Models.DTOs.User;

@inject AuthenticationService AuthService
@inject NavigationManager Navigation


@page "/login"
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<h3>Iniciar Sesión</h3>

@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div class="alert alert-danger">@ErrorMessage</div>
}

<EditForm Model="user" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="username">Username</label>
        <InputText id="username" class="form-control" @bind-Value="user.Email" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" class="form-control" type="password" @bind-Value="user.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@code {
    private UserDTO user = new UserDTO();
    private string ErrorMessage;

    private async Task HandleLogin()
    {
        var result = await AuthService.Login(user);

        if (result)
        {
            // Redirige a la vista principal
            Navigation.NavigateTo("/");
        }
        else
        {
            ErrorMessage = "Error login";
        }
    }
}



